<%- include('../partials/header') %>
    <div class="container" style="margin: 30px;">
        <div class="card text-center">
          <div class="card-header">
            We sent a 6-digit code on your mobile number <%= phone %>.
          </div>
          <div class="card-body">
            <form action="/user/mobileverifyS2" method="POST">
        
              <div class="form-group row" style="margin-bottom: 20px;">
                <label for="phone" class="col-sm-4 col-form-label">Enter Country Code</label>
                <div class="col-sm-6">
                  <input type="text" name="ccode" id="productName" class="form-control" placeholder="+91" readonly value=<%= phone.substring(0,3) %>>
                </div>
              </div>

              <div class="form-group row" style="margin-bottom: 20px;">
                <label for="productName" class="col-sm-4 col-form-label">Enter Phone number</label>
                <div class="col-sm-6">
                  <input type="tel" name="phone" id="productName" class="form-control" placeholder="Enter number " readonly value= <%= phone.substring(3) %>>
                </div>
              </div>

              <div class="form-group row" style="margin-bottom: 20px;">
                <label for="otp" class="col-sm-4 col-form-label">Enter OTP</label>
                <div class="col-sm-6">
                  <input type="number" name="otp" id="productName" class="form-control" placeholder="Enter otp" required>
                </div>
              </div>


              <button type="submit" class="btn btn-success float-right add-product">Click to Verify</button> 
            </form>
          </div>
        </div>
        <ul class="list-group mt-3">
      </ul>      
      </div>
    <%- include('../partials/footer') %>
